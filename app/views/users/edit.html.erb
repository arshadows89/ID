<% if @user.errors.any? %>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
			 <li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<a class="notice"><%= flash[:notice] if flash[:notice] %></a>

<%= form_for @user, :html => {  :multipart => true } do |f| %>
	
	<%= f.text_field :username, placeholder: "Username" %><br />
	<%= f.text_field :email, placeholder: "Email"  %><br />
	<%= f.password_field :password, placeholder: "Password" %><br />
	<%= f.file_field :avatar %><br />
	<button onclick="parent.$.fancybox.close();" type="button" class="formbuttons closefb">Cancel</button>
	<%= f.submit :class => 'formbuttons submitbutton', :id => 'signupformbut'%>
	<br />
<br />

<% end %>



<% params.each do |key,value|
  Rails.logger.warn "Param #{key}: #{value}"
end %>