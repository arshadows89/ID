<% if current_user %>
	<div id="usernamelogedin"><%= current_user.username %></div> 
	<div id='divider44'> | </div> 
		<%= link_to 'Sign Out', logout_path, id: 'usernamelogedin' %>
		<div id='divider44'> | </div>  
		<div class='lastdivider'><%= link_to "User Settings", user_path(current_user.id) %></div>
<% else %>

	<%= form_tag(sessions_path)  do %>
		<div id="username">
			<%= label_tag %>
			Username <%= text_field_tag "user[username]", nil, placeholder: 'Username' %>
		</div>
		<div id="user-password">
			<%= label_tag %>
			Password <%= password_field_tag "user[password]", nil, placeholder: 'Password' %>
		</div>
		
		<div class="hvr-grow">
			<%= submit_tag "Login", class: 'login-button' %>
		</div>

		<div class='hvr-grow lasthvrgrow'>
			<a class="various iframe" data-fancybox-type="iframe" style="text-decoration : none" href="<%= new_user_path %>"><input type="submit" class="guildbutton homesignupbut" value="Sign Up" /></a>
		</div>
		<%= link_to "Forgotten Password?", new_password_reset_path, class: 'forgotpwhome' %>
		<div id='divider'> | </div> 
		<%= check_box_tag :remember_me, 1, params[:remember_me], class: 'rememberme' %>
  		<%= label_tag :remember_me, nil ,class: 'rememberme' %>
	<% end %>
<% end %>